<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    Style="{DynamicResource MaterialDesignWindow}"
	WindowStartupLocation="CenterScreen"
	ResizeMode="CanResize"
    Width="1200"
    Height="1000"
    MaxWidth="{x:Static SystemParameters.PrimaryScreenWidth}"
    MaxHeight="{x:Static SystemParameters.PrimaryScreenHeight}"
    Background="{DynamicResource MaterialDesignPaper}"
	TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    TextElement.FontFamily="Calibri"
	TextOptions.TextFormattingMode="Ideal"
	TextOptions.TextRenderingMode="Auto"
    >

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <md:BundledTheme BaseTheme="Light" PrimaryColor="Blue" SecondaryColor="Purple" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Defaults.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <SolidColorBrush x:Key="AppPrimaryBrush" Color="#2096F4"/>

            <Style TargetType="TabItem">
                <Setter Property="Background" Value="#2096F4"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type TabItem}">
                            <Grid>
                                <Border Name="Border" Background="#909090"  CornerRadius="4,4,0,0" Margin="1 0 0 0" TextElement.FontSize="14" MinWidth="50">
                                    <ContentPresenter x:Name="ContentSite" VerticalAlignment="Center" HorizontalAlignment="Center" ContentSource="Header" Margin="12,2,12,2"/>
                                </Border>
                            </Grid>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsFocused" Value="True" >
                                    <Setter Property="Background" TargetName="Border" Value="#909090" />
                                </Trigger>
                                <Trigger Property="IsMouseOver" Value="True" >
                                    <Setter Property="Background" TargetName="Border" Value="#909090" />
                                    <Setter Property="Cursor" TargetName="Border" Value="Hand" />
                                </Trigger>
                                <Trigger Property="IsSelected" Value="True" >
                                    <Setter Property="Background" TargetName="Border" Value="#2096F4" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style TargetType="CheckBox" BasedOn="{StaticResource {x:Type CheckBox}}">
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="HorizontalAlignment" Value="Center"/>
            </Style>

            <Style x:Key="ActionButton" TargetType="Button">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="Transparent">
                                <ContentPresenter HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                RecognizesAccessKey="True"
                                                Margin="5,0,5,0"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Cursor" Value="Hand"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- DataGrid Row Style for Favorite Highlighting -->
            <Style x:Key="FavoriteRowStyle" TargetType="DataGridRow">
                <Setter Property="Background" Value="Transparent"/>
                <Style.Triggers>
                    <!-- This trigger will be set programmatically when a row is favorited -->
                    <Trigger Property="Tag" Value="IsFavorite">
                        <Setter Property="Background" Value="#FFFACD"/>
                    </Trigger>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="#E3F2FD"/>
                    </Trigger>
                </Style.Triggers>
            </Style>

            <!-- DataGrid Row Style for History with Logs Highlighting -->
            <Style x:Key="HistoryRowStyle" TargetType="DataGridRow">
                <Setter Property="Background" Value="Transparent"/>
                <Style.Triggers>
                    <!-- This trigger will be set programmatically when a row has a log -->
                    <Trigger Property="Tag" Value="HasLog">
                        <Setter Property="Background" Value="#ADD8E6"/>
                    </Trigger>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="#E3F2FD"/>
                    </Trigger>
                </Style.Triggers>
            </Style>

            <!-- Context Menu Style -->
            <Style x:Key="GridContextMenuStyle" TargetType="ContextMenu">
                <Setter Property="FontSize" Value="12"/>
            </Style>

            <!-- Context Menu Item Style -->
            <Style x:Key="GridContextMenuItemStyle" TargetType="MenuItem">
                <Setter Property="FontSize" Value="12"/>
            </Style>

            <!-- PackIcon Style for Context Menu Icons -->
            <Style x:Key="ContextMenuIconStyle" TargetType="md:PackIcon">
                <Setter Property="Width" Value="16"/>
                <Setter Property="Height" Value="16"/>
                <Setter Property="Margin" Value="0"/>
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid Background="{DynamicResource MaterialDesignPaper}">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="300" Name="ShellRow"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <DockPanel Grid.Column="0">
                    <Menu DockPanel.Dock="Top">
                        <MenuItem Header="_File" FontSize="12" VerticalAlignment="Center">
                            <MenuItem Header="_New">
                                <MenuItem.Icon>
                                    <md:PackIcon Kind="FilePlusOutline" Style="{StaticResource ContextMenuIconStyle}"/>
                                </MenuItem.Icon>
                            </MenuItem>
                            <MenuItem Header="_Open" Name="BtnMenuOpen">
                                <MenuItem.Icon>
                                    <md:PackIcon Kind="FolderOutline" Style="{StaticResource ContextMenuIconStyle}"/>
                                </MenuItem.Icon>
                            </MenuItem>
                            <MenuItem Header="_Save" Name="BtnMenuSave">
                                <MenuItem.Icon>
                                    <md:PackIcon Kind="ContentSaveOutline" Style="{StaticResource ContextMenuIconStyle}"/>
                                </MenuItem.Icon>
                            </MenuItem>
                            <MenuItem Header="SaveAs" Name="BtnMenuSaveAs">
                                <MenuItem.Icon>
                                    <md:PackIcon Kind="ContentSaveMoveOutline" Style="{StaticResource ContextMenuIconStyle}"/>
                                </MenuItem.Icon>
                            </MenuItem>
                            <MenuItem Header="_Import" Name="BtnMenuImport">
                                <MenuItem.Icon>
                                    <md:PackIcon Kind="FileImportOutline" Style="{StaticResource ContextMenuIconStyle}"/>
                                </MenuItem.Icon>
                            </MenuItem>
                            <MenuItem Header="_Settings" Name="BtnMenuSettings">
                                <MenuItem.Icon>
                                    <md:PackIcon Kind="CogOutline" Style="{StaticResource ContextMenuIconStyle}"/>
                                </MenuItem.Icon>
                            </MenuItem>
                            <Separator />
                            <MenuItem Header="_Exit"/>
                        </MenuItem>
                        <MenuItem Header="_Edit" FontSize="12" VerticalAlignment="Center">
                            <MenuItem Header="_Add" Name="BtnMenuAdd">
                                <MenuItem.Icon>
                                    <md:PackIcon Kind="AddBox" Style="{StaticResource ContextMenuIconStyle}"/>
                                </MenuItem.Icon>
                            </MenuItem>
                            <MenuItem Header="_Duplicate" Name="BtnMenuDuplicate">
                                <MenuItem.Icon>
                                    <md:PackIcon Kind="ContentCopy" Style="{StaticResource ContextMenuIconStyle}"/>
                                </MenuItem.Icon>
                            </MenuItem>
                            <MenuItem Header="_Remove" Name="BtnMenuRemove">
                                <MenuItem.Icon>
                                    <md:PackIcon Kind="TrashCan" Style="{StaticResource ContextMenuIconStyle}"/>
                                </MenuItem.Icon>
                            </MenuItem>
                            <MenuItem Header="_Undo Delete" Name="BtnMenuUndoDelete">
                                <MenuItem.Icon>
                                    <md:PackIcon Kind="DeleteRestore" Style="{StaticResource ContextMenuIconStyle}"/>
                                </MenuItem.Icon>
                            </MenuItem>
                            <MenuItem Header="_Favorite" Name="BtnMenuFavorite">
                                <MenuItem.Icon>
                                    <md:PackIcon Kind="Star" Style="{StaticResource ContextMenuIconStyle}"/>
                                </MenuItem.Icon>
                            </MenuItem>
                            <MenuItem Header="_Edit Mode" IsCheckable="True" Name="BtnMenuEdit">
                                <MenuItem.Icon>
                                    <md:PackIcon Kind="Edit" Style="{StaticResource ContextMenuIconStyle}"/>
                                </MenuItem.Icon>
                            </MenuItem>
                        </MenuItem>
                        <MenuItem Header="_Run" FontSize="12" VerticalAlignment="Center">
                            <MenuItem Name="BtnMenuRunOpen" Header="_Open">
                                <MenuItem.Icon>
                                    <md:PackIcon Kind="FileDocumentEditOutline" Style="{StaticResource ContextMenuIconStyle}"/>
                                </MenuItem.Icon>
                            </MenuItem>
                            <MenuItem Name="BtnMenuRunAttached" Header="Run (_Attached)">
                                <MenuItem.Icon>
                                    <md:PackIcon Kind="Play" Style="{StaticResource ContextMenuIconStyle}"/>
                                </MenuItem.Icon>
                            </MenuItem>
                            <MenuItem Name="BtnMenuRunDetached" Header="Run (_Detached)">
                                <MenuItem.Icon>
                                    <md:PackIcon Kind="OpenInNew" Style="{StaticResource ContextMenuIconStyle}"/>
                                </MenuItem.Icon>
                            </MenuItem>
                            <MenuItem Name="BtnMenuRunRerunLast" Header="Rerun Last Command">
                                <MenuItem.Icon>
                                    <md:PackIcon Kind="Refresh" Style="{StaticResource ContextMenuIconStyle}"/>
                                </MenuItem.Icon>
                            </MenuItem>
                        </MenuItem>
                    </Menu>
                </DockPanel>

                <Border Grid.Column="1"
                        Background="#F5F5F5"
                        BorderBrush="#D0D0D0"
                        BorderThickness="1"
                        CornerRadius="3"
                        Margin="10,3,5,3"

                        VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal">
                        <md:PackIcon Kind="Magnify"
                                    Width="16"
                                    Height="16"
                                    VerticalAlignment="Center"
                                    Foreground="#808080"
                                    Margin="0,0,5,0"/>
                        <TextBox Name="TxtSearchFilter"
                                Width="200"
                                FontSize="12"
                                VerticalAlignment="Center"
                                VerticalContentAlignment="Center"
                                BorderThickness="0"
                                Background="Transparent"
                                md:HintAssist.Hint="Search commands..."/>
                    </StackPanel>
                </Border>

                <ToggleButton Grid.Column="3" Name="BtnToggleEditMode"
                        VerticalAlignment="Center"
                        Margin="5,0,5,0"
                        Background="Transparent"
                        Style="{StaticResource MaterialDesignActionToggleButton}">
                    <ToggleButton.Content>
                        <md:PackIcon Kind="Edit" Foreground="Orange"/>
                    </ToggleButton.Content>
                    <md:ToggleButtonAssist.OnContent>
                        <md:PackIcon Kind="EditOff" Foreground="Black"/>
                    </md:ToggleButtonAssist.OnContent>
                    <Button.ToolTip>
                        <ToolTip>
                            <TextBlock>Toggle Edit Mode</TextBlock>
                        </ToolTip>
                    </Button.ToolTip>
                </ToggleButton>
            </Grid>

            <Grid Name="Main" Grid.Row="1">
                <TabControl Name="TabControl" Margin="1 0 0 0" HorizontalContentAlignment="Left" />
            </Grid>

            <GridSplitter Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" Height="5" HorizontalAlignment="Stretch" VerticalAlignment="Center" Background="Gray"/>

            <Grid Name="Shell" Grid.Row="3" Visibility="Visible" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="5"/>
                </Grid.RowDefinitions>
                <TabControl Grid.Row="0" Name="TabControlShell" HorizontalContentAlignment="Right" TabStripPlacement="Top" Margin="10,0,10,0" >
                    <TabItem Header="Shell">
                        <TabControl Name="PSTabControl" HorizontalContentAlignment="Left" >
                            <TabItem Header="+" Name="PSAddTab"/>
                        </TabControl>
                    </TabItem>
                    <TabItem Header="History">
                        <DataGrid Name="CommandHistoryGrid"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True"
                                  CanUserAddRows="False"
                                  CanUserDeleteRows="False"
                                  SelectionMode="Extended"
                                  HeadersVisibility="Column"
                                  GridLinesVisibility="Horizontal"
                                  AlternatingRowBackground="#F5F5F5"
                                  RowHeight="30"
                                  RowStyle="{StaticResource HistoryRowStyle}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Timestamp" Binding="{Binding Timestamp}" Width="150"/>
                                <DataGridTextColumn Header="Command" Binding="{Binding CommandName}" Width="200"/>
                                <DataGridTextColumn Header="Parameters" Binding="{Binding ParameterSummary}" Width="*"/>
                            </DataGrid.Columns>
                            <DataGrid.ContextMenu>
                                <ContextMenu Style="{StaticResource GridContextMenuStyle}">
                                    <MenuItem Name="MenuHistoryRerun" Header="Rerun Command" Style="{StaticResource GridContextMenuItemStyle}">
                                        <MenuItem.Icon>
                                            <md:PackIcon Kind="Refresh" Style="{StaticResource ContextMenuIconStyle}"/>
                                        </MenuItem.Icon>
                                    </MenuItem>
                                    <MenuItem Name="MenuHistoryCopyToClipboard" Header="Copy To Clipboard" Style="{StaticResource GridContextMenuItemStyle}">
                                        <MenuItem.Icon>
                                            <md:PackIcon Kind="ClipboardMultipleOutline" Style="{StaticResource ContextMenuIconStyle}"/>
                                        </MenuItem.Icon>
                                    </MenuItem>
                                    <MenuItem Name="MenuHistoryOpenLog" Header="Open Log" Style="{StaticResource GridContextMenuItemStyle}">
                                        <MenuItem.Icon>
                                            <md:PackIcon Kind="FileDocumentOutline" Style="{StaticResource ContextMenuIconStyle}"/>
                                        </MenuItem.Icon>
                                    </MenuItem>
                                    <Separator/>
                                    <MenuItem Name="MenuHistoryRemove" Header="Remove From History" Style="{StaticResource GridContextMenuItemStyle}">
                                        <MenuItem.Icon>
                                            <md:PackIcon Kind="Delete" Style="{StaticResource ContextMenuIconStyle}"/>
                                        </MenuItem.Icon>
                                    </MenuItem>
                                    <MenuItem Name="MenuHistoryClear" Header="Clear History" Style="{StaticResource GridContextMenuItemStyle}">
                                        <MenuItem.Icon>
                                            <md:PackIcon Kind="DeleteSweep" Style="{StaticResource ContextMenuIconStyle}"/>
                                        </MenuItem.Icon>
                                    </MenuItem>
                                </ContextMenu>
                            </DataGrid.ContextMenu>
                        </DataGrid>
                    </TabItem>
                    <TabItem Header="Logs">
                        <TabControl Name="LogTabControl" HorizontalContentAlignment="Left">
                            <TabItem Header="+" Name="LogAddTab"/>
                        </TabControl>
                    </TabItem>
                    <TabItem Header="Debug" Visibility="Collapsed">
                        <Grid ClipToBounds="True">
                            <TextBox Name="LogBox" BorderThickness="0" Foreground="Black"  VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Auto" TextWrapping="NoWrap" />
                        </Grid>
                    </TabItem>
                </TabControl>
                <Separator Grid.Row="1" />
            </Grid>

            <Grid Name="CommandControls" Grid.Row="4">
                <ToggleButton Name="BtnToggleShell"
                              VerticalAlignment="Center"
                              HorizontalAlignment="Left"
                              Margin="10,0,0,0"
                              Background="Transparent"
                              Style="{StaticResource MaterialDesignActionToggleButton}"
                              IsChecked="True">
                    <ToggleButton.Content>
                        <md:PackIcon Kind="ChevronUp" Foreground="Black"/>
                    </ToggleButton.Content>
                    <md:ToggleButtonAssist.OnContent>
                        <md:PackIcon Kind="ChevronDown" Foreground="Black"/>
                    </md:ToggleButtonAssist.OnContent>
                    <Button.ToolTip>
                        <ToolTip>
                            <TextBlock>Toggle Shell Grid</TextBlock>
                        </ToolTip>
                    </Button.ToolTip>
                </ToggleButton>
                <StackPanel Grid.Row="0" Margin="50 10 10 10" VerticalAlignment="Center" Orientation="Horizontal" Background="Transparent" HorizontalAlignment="Center">
                    <Button Name="BtnMainRun" Content="Run" VerticalAlignment="Center" HorizontalAlignment="Center" Style="{StaticResource MaterialDesignRaisedButton}" TextElement.Foreground="White" Width="250" Height="30"/>
                </StackPanel>
            </Grid>

            <Grid Grid.Row="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="5"/>
                    <RowDefinition Height="20"/>
                </Grid.RowDefinitions>
                <Separator Grid.Row="0" />
                <TextBlock Grid.Row="1" Name="StatusBox" Text="Ready" HorizontalAlignment="Right" Margin="0,0,10,0"/>
            </Grid>
        </Grid>


        <!-- Loading Indicator with its own overlay -->
        <Rectangle Name="Overlay" Fill="Black" Opacity="0.5" Visibility="Collapsed" Panel.ZIndex="999"/>
        <Grid Name="LoadingIndicator" Panel.ZIndex="1001" Visibility="Collapsed" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Border Background="White" BorderBrush="#2096F4" BorderThickness="2" CornerRadius="5" Padding="20">
                <StackPanel Orientation="Horizontal">
                    <md:PackIcon Kind="Loading" Width="32" Height="32" Foreground="#2096F4" Margin="0,0,10,0">
                        <md:PackIcon.RenderTransform>
                            <RotateTransform CenterX="16" CenterY="16"/>
                        </md:PackIcon.RenderTransform>
                        <md:PackIcon.Triggers>
                            <EventTrigger RoutedEvent="md:PackIcon.Loaded">
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever">
                                        <DoubleAnimation Storyboard.TargetProperty="(md:PackIcon.RenderTransform).(RotateTransform.Angle)" From="0" To="360" Duration="0:0:1"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </md:PackIcon.Triggers>
                    </md:PackIcon>
                    <TextBlock Name="LoadingText" Text="Loading command parameters..." FontSize="14" VerticalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>

        <Grid Name="SettingsDialog" Panel.ZIndex="1000" Background="White" Visibility="Hidden" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Border BorderBrush="Black" BorderThickness="1">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0" Height="25">
                            <TextBlock Text="Settings" HorizontalAlignment="Center" Margin="4 0 0 0" FontSize="20" FontWeight="Bold" />
                            <Button Name="BtnCloseSettings" HorizontalAlignment="Right" IsEnabled="True" Margin="0 0 4 4" WindowChrome.IsHitTestVisibleInChrome="True" Style="{StaticResource ActionButton}" VerticalAlignment="Center" Height="25" Width="25" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="#9E9E9E">
                                <md:PackIcon Kind="Close" Height="20" Width="20"/>
                            </Button>
                        </Grid>

                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" MaxHeight="400">
                            <Grid Name="SettingsGrid">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <Label Grid.Row="0" Grid.Column="0" Content="Default Shell:"/>
                                <TextBox Grid.Row="0" Grid.Column="1" Name="TxtDefaultShell" Margin="5"/>

                                <Label Grid.Row="1" Grid.Column="0" Content="Default Shell Args:"/>
                                <TextBox Grid.Row="1" Grid.Column="1" Name="TxtDefaultShellArgs" Margin="5"/>

                                <Label Grid.Row="2" Grid.Column="0" Content="Default Run Command Attached:"/>
                                <CheckBox Grid.Row="2" Grid.Column="1" Name="ChkRunCommandAttached" Margin="5" VerticalAlignment="Center"/>

                                <Label Grid.Row="3" Grid.Column="0" Content="Open Shell At Start:"/>
                                <CheckBox Grid.Row="3" Grid.Column="1" Name="ChkOpenShellAtStart" Margin="5" VerticalAlignment="Center"/>

                                <Label Grid.Row="4" Grid.Column="0" Content="Default Logs Path:"/>
                                <TextBox Grid.Row="4" Grid.Column="1" Name="TxtDefaultLogsPath" Margin="5"/>
                                <Button Grid.Row="4" Grid.Column="2" Name="BtnBrowseLogs" VerticalAlignment="Center" Style="{StaticResource ActionButton}">
                                    <Button.LayoutTransform>
                                        <ScaleTransform   ScaleX="1.5" ScaleY="1.5"/>
                                    </Button.LayoutTransform>
                                    <md:PackIcon Kind="FileFind" Foreground="Black"/>
                                    <Button.ToolTip>
                                        <ToolTip>
                                            <TextBlock>Change Path</TextBlock>
                                        </ToolTip>
                                    </Button.ToolTip>
                                </Button>

                                <Label Grid.Row="5" Grid.Column="0" Content="Settings Path:"/>
                                <TextBox Grid.Row="5" Grid.Column="1" Name="TxtSettingsPath" Margin="5"/>
                                <Button Grid.Row="5" Grid.Column="2" Name="BtnBrowseSettings" VerticalAlignment="Center" Style="{StaticResource ActionButton}">
                                    <Button.LayoutTransform>
                                        <ScaleTransform   ScaleX="1.5" ScaleY="1.5"/>
                                    </Button.LayoutTransform>
                                    <md:PackIcon Kind="FileFind" Foreground="Black"/>
                                    <Button.ToolTip>
                                        <ToolTip>
                                            <TextBlock>Change Path</TextBlock>
                                        </ToolTip>
                                    </Button.ToolTip>
                                </Button>

                                <Label Grid.Row="6" Grid.Column="0" Content="Favorites Path:"/>
                                <TextBox Grid.Row="6" Grid.Column="1" Name="TxtFavoritesPath" Margin="5"/>
                                <Button Grid.Row="6" Grid.Column="2" Name="BtnBrowseFavorites" VerticalAlignment="Center" Style="{StaticResource ActionButton}">
                                    <Button.LayoutTransform>
                                        <ScaleTransform   ScaleX="1.5" ScaleY="1.5"/>
                                    </Button.LayoutTransform>
                                    <md:PackIcon Kind="FileFind" Foreground="Black"/>
                                    <Button.ToolTip>
                                        <ToolTip>
                                            <TextBlock>Change Path</TextBlock>
                                        </ToolTip>
                                    </Button.ToolTip>
                                </Button>

                                <Label Grid.Row="7" Grid.Column="0" Content="History Path:"/>
                                <TextBox Grid.Row="7" Grid.Column="1" Name="TxtDefaultHistoryPath" Margin="5"/>
                                <Button Grid.Row="7" Grid.Column="2" Name="BtnBrowseHistory" VerticalAlignment="Center" Style="{StaticResource ActionButton}">
                                    <Button.LayoutTransform>
                                        <ScaleTransform   ScaleX="1.5" ScaleY="1.5"/>
                                    </Button.LayoutTransform>
                                    <md:PackIcon Kind="FileFind" Foreground="Black"/>
                                    <Button.ToolTip>
                                        <ToolTip>
                                            <TextBlock>Change Path</TextBlock>
                                        </ToolTip>
                                    </Button.ToolTip>
                                </Button>

                                <Label Grid.Row="8" Grid.Column="0" Content="Default Data File:"/>
                                <TextBox Grid.Row="8" Grid.Column="1" Name="TxtDefaultDataFile" Margin="5"/>
                                <Button Grid.Row="8" Grid.Column="2" Name="BtnBrowseDataFile" VerticalAlignment="Center" Style="{StaticResource ActionButton}">
                                    <Button.LayoutTransform>
                                        <ScaleTransform   ScaleX="1.5" ScaleY="1.5"/>
                                    </Button.LayoutTransform>
                                    <md:PackIcon Kind="FileFind" Foreground="Black"/>
                                    <Button.ToolTip>
                                        <ToolTip>
                                            <TextBlock>Change Path</TextBlock>
                                        </ToolTip>
                                    </Button.ToolTip>
                                </Button>

                                <Label Grid.Row="9" Grid.Column="0" Content="Command History Limit:"/>
                                <TextBox Grid.Row="9" Grid.Column="1" Name="TxtCommandHistoryLimit" Margin="5"/>

                                <Label Grid.Row="10" Grid.Column="0" Content="Status Timeout (seconds):"/>
                                <TextBox Grid.Row="10" Grid.Column="1" Name="TxtStatusTimeout" Margin="5"/>

                                <Label Grid.Row="11" Grid.Column="0" Content="Save Command History:"/>
                                <CheckBox Grid.Row="11" Grid.Column="1" Name="ChkSaveHistory" Margin="5" VerticalAlignment="Center"/>

                                <Label Grid.Row="12" Grid.Column="0" Content="Show Debug Tab:"/>
                                <CheckBox Grid.Row="12" Grid.Column="1" Name="ChkShowDebugTab" Margin="5" VerticalAlignment="Center"/>
                            </Grid>
                        </ScrollViewer>

                        <Button Grid.Row="2" Name="BtnApplySettings" Content="Apply" IsDefault="True" Style="{StaticResource MaterialDesignRaisedButton}" TextElement.Foreground="White" Width="150" Height="30" HorizontalAlignment="Center" Margin="0,10,0,10"/>
                    </Grid>
                </Border>
            </Grid>
    </Grid>
</Window>